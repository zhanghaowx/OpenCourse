        <transitionSet android:transitionOrdering="together">
            <transition class="io.github.zhanghaowx.opencourse.transition.Fold">
                <targets>
                    <target android:targetId="@id/course_detail_header_image"/>
                </targets>
            </transition>
            <fade>
                <targets>
                    <target android:targetId="@id/course_detail_course_summary"/>
                </targets>
            </fade>
        </transitionSet>
    </transitionSet>
</transitionSet>
