<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- android theme colors -->
        <item name="android:colorPrimary">@color/theme_default_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="android:colorAccent">@color/theme_default_light</item>
        <item name="android:navigationBarColor">@color/theme_default_primary</item>

        <!-- android transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="drawerArrowStyle">@style/Theme.OpenCourse.DrawerArrowStyle</item>
    </style>

    <style name="Theme.OpenCourse.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>